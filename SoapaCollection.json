	"item": [
		{
			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let json = pm.response.json()?.data;\r",
							"pm.test(\"Código 200 = Login OK\", () => {\r",
							"    pm.expect(pm.response.code).to.eql(200);\r",
							"});\r",
							"if (json?.access_token) {\r",
							"    pm.collectionVariables.set(\"access_token\", json.access_token);\r",
							"    pm.collectionVariables.set(\"refresh_token\", json.refresh_token);\r",
							"} else {\r",
							"    pm.test(\"No se recibió access_token\", () => {\r",
							"        pm.expect.fail(\"No se recibió access_token\");\r",
							"    });\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Si ya existe un token, LOGIN NO debe ejecutarse\r",
							"if (pm.collectionVariables.get(\"access_token\")) {\r",
							"    console.log(\"Token encontrado. Cancelando ejecución de Login…\");\r",
							"\r",
							"    // Cancelar ejecución de ESTE request\r",
							"    pm.execution.skipRequest();\r",
							"}\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"username\": \"{{username}}\",\r\n  \"password\": \"{{password}}\"\r\n}\r\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://q-appsiox.finanzasoaxaca.gob.mx/api/v1/auth/authenticate",
					"protocol": "https",
					"host": [
						"q-appsiox",
						"finanzasoaxaca",
						"gob",
						"mx"
					],
					"path": [
						"api",
						"v1",
						"auth",
						"authenticate"
					]
				}
			},
			"response": []
		},
		{
			"name": "Consulta adeudo SOAPA",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Código HTTP válido\", function () {\r",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 400, 401, 403, 404, 422, 500, 503]);\r",
							"});\r",
							"\r",
							"const json = pm.response.json();\r",
							"\r",
							"pm.test(\"Respuesta contiene 'success'\", () => {\r",
							"    pm.expect(json).to.have.property(\"success\");\r",
							"});\r",
							"\r",
							"// Si existe adeudo o LC\r",
							"if (pm.response.code === 200 && json.data && json.data.lineaCaptura) {\r",
							"    pm.collectionVariables.set(\"lineaCaptura_SOAPA\", json.data.lineaCaptura);\r",
							"    pm.collectionVariables.set(\"urlFormatoPago_SOAPA\", json.data.urlFormatoPago);\r",
							"}\r",
							"\r",
							"if (pm.info.iteration + 1 === pm.info.iterationCount) {\r",
							"    console.log(\"Última iteración → limpiando tokens...\");\r",
							"    pm.collectionVariables.unset(\"access_token\");\r",
							"    pm.collectionVariables.unset(\"refresh_token\");\r",
							"}\r",
							"\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Asegura token\r",
							"pm.request.headers.upsert({\r",
							"    key: \"Authorization\",\r",
							"    value: \"Bearer \" + pm.collectionVariables.get(\"access_token\")\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{access_token}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"numeroCuenta\": \"{{numeroCuenta}}\"\r\n}\r\n",
					"options": {
